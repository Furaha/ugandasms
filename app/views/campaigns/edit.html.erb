<div class="container">
  <div class="row">
    <h3 class="text-center">Edit the Campaign</h3>    
  </div>
  <div class="row">
    <%= form_for @campaign,  :method => "patch", :html => { :multipart => true, id: "attachment", 
        class: "form-horizontal col-sm-offset-4", role: "form"} do |f| %>
      <div class="form-group">
        <%= f.label :title, "Title:", class: "col-sm-2 control-label" %>     
        <div class="col-sm-4"><%= f.text_field :title %></div>
      </div>   
      <div class="form-group">
        <%= f.label :file, "upload campaign:", class: "col-sm-2 control-label" %>     
        <div class="col-sm-4"><%= f.file_field :file %></div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
        <%= submit_tag("Update", class: "btn btn-sm btn-primary") %>
        </div>
      </div>
    <% end %>
  </div>
</div>