<% provide(:title, 'Home') %>
<div id="job-openings">
  <div class="row">
    <div class="col-md-12">
      <h4 class="text-center">Existing campaigns</h4>
      <hr class="star-primary"><br/>
    <div class="row">
      <div class="col-md-12">
        <div class="add-company-button">
          <%= link_to "Add new compaign", new_campaign_path, class: "btn btn-success" %>
        </div><br/><br/>
      </div>
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th></th>
                <th class="text-center">Campaign Name</th>
                <th class="text-center">Send Questions</th>
                <th class="text-center">Edit|Delete</th>
              </tr>              
            </thead>
            <tbody>
              <% @campaigns.each do |campaign| %>
                <tr>
                  <td></td>
                  <td class="text-center"><%= link_to campaign.title, campaign_path(campaign) %></td>
                  <td class="text-center"><%= link_to('Send Questions', start_campaign_path(campaign_id: campaign.id),
                    class: "btn btn-primary", method: :post) %></td>
                  <td class="text-center"><%= link_to('Edit', edit_campaign_path(campaign)) %>|<%= link_to('Delete', campaign_path(campaign), class: "text-danger", method: :delete)%></td>
                </tr>
              <% end %>
            </tbody>            
          </table>
          
        </div>        
      </div>
    </div>
  </div>
</div>