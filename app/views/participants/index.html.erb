<% provide(:title, 'Participants') %>
<div id="job-openings">
  <div class="row">
    <div class="col-md-12">
      <h4 class="text-center">Participants</h4>
      <hr class="star-primary"><br/>
    <div class="row">
      <div class="col-md-12">
        <div class="add-company-button">
          <%= link_to "Add Participants", new_participant_path, class: "btn btn-success" %>
        </div><br/><br/>
      </div>
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th></th>
                <th>Number</th>
              </tr>              
            </thead>
            <tbody>
              <% @participants.each do |participant| %>
                <tr>
                  <td></td>
                  <td><%= participant.number %></td>                  
                </tr>
              <% end %>
            </tbody>            
          </table>
          
        </div>        
      </div>
    </div>
  </div>
</div>