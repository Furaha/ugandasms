<%= form_for @program, html: {class: "form-horizontal"} do |f| %>
  <% if @program.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @program.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group"> 
    <%= f.label "Region", class: "col-sm-2 control-label" %>
    <%= f.label @program.region.name, class: "col-sm-2 control-label text-left" %>
    <%= f.hidden_field :region_id %>
  </div>

  <div class="form-group <%= "has-error" if @program.errors.any? %>">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <%= f.submit "Add Program", class: "btn btn-primary" %>
<% end %>
