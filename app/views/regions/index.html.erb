<div id="notice"><%= notice %></div>

<% @regions.each do |region| %>
  <hr />
  <div class="region">
    <h3>
      <%= link_to region.name, region %> 
    </h3>
    <% region.programs.each do |program| %>
      <div class="program">
        <%= link_to program.name, program %>
        <div>
          <small style="white-space: nowrap;">| x messages</small>
          <small style="white-space: nowrap;">| x recipients</small>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<hr />
<div>
  <%= link_to 'Add New Region', new_region_path, class: "btn btn-primary" %>
</div>

